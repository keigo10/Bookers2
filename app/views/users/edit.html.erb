
<div class="container">

  <p id="notice"></p>
  	<h2>User info</h2>
<% if @user.errors.any? %>
  <div class="error_explanation">
    <h2><%= pluralize(@user.errors.count,"error") %></h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_for(@user) do |f| %>

    <div class="form-group has-icon">
      <label for="user_name">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="form-group has-icon">
       <div class="user-edit-image">
       	<%= f.attachment_field :profile_image %>
       </div>
       <label class="control-label sr-only" for="inputEmail">ProfileImage</label>


  <div class="field">
    <label for="user_introduction">Introduction</label>
    <!-- <textarea class="introduction" name="user[introduction]" id="user_introduction"></textarea> -->
      <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>

  <% end %>
  </div>
</div>
