
<div class="container">

  <p id="notice"></p>
  <%= flash[:notice] %>
  <div class="row">

    <div class="col-xs-3">
      <%= render 'users/user_info', user: @user %>
    	<%= render 'books/new_book', book: @book %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr> 
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
         <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 35, 35, fallback: 'no_image.jpg',size:'35x35' %>
              <% end %>
            </td>
            <td>
              <%= link_to (book) do %>
              <%= book.title %>
              <% end %>
              </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
