
      <div class="container">

        <p id="notice"></p>

<%= flash[:notice] %>
  <div class="row">
  <div class="col-xs-3">
  <%= render 'users/user_info', user: @book.user %>
    <%= render 'new_book', book: @book_new %>
  </div>


  <div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
		  <tbody><tr>
        <td>
          <%= link_to(@book.user) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: 'no_image.jpg',size:'35x35' %><br>
          <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to(@book) do %>
          <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %></td>
        <% if @book.user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book.id),class: "btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@book.id), method: :delete ,class: "btn-sm btn-danger",data: { confirm: '削除しますか？' }%></td>
        <% end %>

      </tr>
    </tbody></table>

  </div>
</div>
      </div>
